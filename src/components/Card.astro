---
// Props requiere de
interface Props {
	title: string; // título
	author: string; // título
	content: string; // contenido
	hyper: string; // contenido
	// author?: string // agrega un signo de interrogación para hacerlo opcional.
}

const { title, author, content, hyper } = Astro.props;
---

<head>
	<meta http-equiv='Content-Type' content='text/html;charset=UTF-8' />
	<style>
		.card {
			max-width: 65ch;
			font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
				Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue',
				sans-serif;

			background-color: hsl(0, 0%, 90%);
			padding: 1rem;
			margin-bottom: 1rem;
		}

		.card a:hover {
			cursor: pointer;
			text-decoration: underline;
		}
	</style>
</head>
<body>
	<div class='card'>
		<h1>{title}</h1>
        <h3>Por {author}</h3>
		<p>
			{content}
		</p>
		<a href={hyper}>Leer más</a>
	</div>
</body>
