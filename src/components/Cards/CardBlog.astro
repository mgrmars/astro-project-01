---
interface Props {
  href?: string;
  date: string;
  title: string;
  author: string;
}

const { href, title, author, date } = Astro.props;
---

<style lang="scss">

  @use '../../styles/variables';
  .post {
    max-width: fit-content;
    display: block;
    text-decoration: none;
    margin-block-end: 1rem;
    padding: 1rem;
    color: inherit;
    outline: 0.1rem solid hsla(0, 0%, 0%, 20%);
    background-color: variables.$background-gradient-boxes-fallback;
    background-image: variables.$background-gradient-boxes;
    border-radius: 0.3rem;
    transition: background-color 0.2s ease-in-out;
    box-shadow: 0 0.2rem 0.6rem hsla(0, 0%, 0%, 10%);

    &:hover {
    }

    &:focus-visible {
      outline-width: 0.2rem;
      outline-color: hsla(0, 0%, 0%, 50%);
    }

    .title {
      margin-block-end: 0.4rem;
    }

    .author,
    .date {
      font-weight: 500;
    }
  }
</style>

<a class="post" href={href}>
  <h3 class="title">{title}</h3>
  <span class="information">
    publicado
    <span class="date">{date}</span>
    por
    <span class="author">{author}</span>
  </span>
</a>
