---
interface Props {
  href?: string;
  date: string;
  title: string;
  author: string;
}

const { href, title, author, date } = Astro.props;
---

<!-- Style: SASS (.scss)  -->
<style lang="scss">
  .post {
    display: block;
    text-decoration: none;
    margin-block-end: 1rem;
    padding: 1rem;
    color: inherit;
    outline: 0.1rem solid hsla(0, 0%, 0%, 20%);
    border-radius: 0.3rem;
    transition: background-color 0.2s ease-in-out;

    &:hover {
      background-color: hsla(0, 0%, 0%, 3%);
    }

    &:focus-visible {
      outline-width: 0.2rem;
      outline-color: hsla(0, 0%, 0%, 50%);    
    }

    .title {
      margin-block-end: 0.4rem;
    }
    .author,
    .date {
      font-weight: 500;
    }
  }
</style>
<!-- Component -->
<a class="post" href={href}>
  <h3 class="title">{title}</h3>
  <span class="information">
    publicado
    <span class="date">{date}</span>
    por
    <span class="author">{author}</span>
  </span>
</a>
