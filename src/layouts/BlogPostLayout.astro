---
import Layout from "../layouts/Layout.astro";

const { frontmatter } = Astro.props;
---

<style lang="scss">
  @use "../styles/variables";
  .description {
    font-size: 0.9rem;
  }

  .date,
  .author {
    font-weight: 500;
  }

  a {
    background-color: variables.$color-02;
    transition: background-color 0.2s ease-in-out;

    &:hover {
      background-color: variables.$color-03;
    }
  }
</style>

<Layout pageTitle={frontmatter.title} pageDescription={frontmatter.resumen}>
  <h1>{frontmatter.title}</h1>
  <p class="description">
    publicado el
    <span class="date">{frontmatter.date}</span>
    por
    <span class="author">{frontmatter.author}</span>
  </p>
  <slot />
</Layout>
